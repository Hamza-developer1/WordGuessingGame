<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clientController" stylesheets="client.css">
    <TextField fx:id="clientField" promptText="Type your message here" />
    <TextField fx:id="destinationField" promptText="Enter which client to send to" />
    <Button text="Send" fx:id="sendButton" onAction="#send"/>
    <ListView fx:id="messageList" />
</VBox>
